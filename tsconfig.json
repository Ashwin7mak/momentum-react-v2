{
  "compilerOptions": {
    "module": "ESNext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./dist/esm",
    "paths": {
      "@momentum-ui/react": ["./src"]
    },
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES6",
    "lib": [
      "ESNext", "DOM"
    ]
  },
  "include": [
    "./src/**/*.*"
  ]
}
