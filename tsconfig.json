{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@momentum-ui/react/*": ["src/lib/*"],
      "@momentum-ui/react": [
        "src/lib/index.js"
      ]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": false,
    "jsx": "react",
    "strict": true,
    "isolatedModules": true,
    "sourceMap": true
  },
  "include": [
    "src/lib"
  ]
}